{
    "manifest_version": 3,
  
    "name": "Simple Ad Blocker",
    "description": "A Simple Ad Blocker Extension to avoid popups and advertisements on website walls",
    "version": "1.0.0",
  
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
  
    "permissions": [
      "declarativeNetRequest"
    ],
  
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "ruleset_1",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    }
  }
